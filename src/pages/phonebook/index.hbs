<!DOCTYPE html>

{{#> common/body
    title=pages.phonebook.pageTitle
    class="phonebook-page"
}}
    {{> layout/header title='pages.phonebook.title'}}

    <main class="wrapper">

        <div class="container">
            {{> common/breadcrumbs}}

            <div class="content"> 
                <div class="content__header">
                    <h1 class="content__title_main">Телефонный справочник</h1>
                </div>

                <div class="content__wrapper phonebook">

                    <div class="phonebook__search">
                        {{> search/index}}
                    </div>

                    <ul class="phonebook__list">

                        <li class="phonebook__item _toggle _toggle_active">
                            <div class="phonebook__item__head _toggle__button">
                                <p class="phonebook__item__title">Деканат</p>
                                <button class="phonebook__item__button button button_more button_round"></button>
                            </div>

                            <div class="phonebook__item__body _toggle__container">
                                {{> phonebook/table_desktop}}
                                {{> phonebook/table_mobile}}
                            </div>
                        </li>

                        <li class="phonebook__item _toggle">
                            <div class="phonebook__item__head _toggle__button">
                                <p class="phonebook__item__title">Учёный совет КГПУ</p>
                                <button class="phonebook__item__button button button_more button_round"></button>
                            </div>

                            <div class="phonebook__item__body _toggle__container">
                                {{> phonebook/table_desktop}}
                                {{> phonebook/table_mobile}}
                            </div>
                        </li>
                    </ul>
                </div>

            </div>


        </div>


    </main>

    {{> layout/footer}}
{{/common/body}}