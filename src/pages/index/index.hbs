<!DOCTYPE html>

{{#> common/body
    title=pages.index.pageTitle
    class="main-page"
}}
    {{> layout/header title='pages.index.title'}}

    <main class="main">

        {{> slider/index}}

        <section class="news section">
            <div class="container">
                <div class="news__header section__header">
                    <h1 class="news__title section__title">Новости</h1>
                    <a class="section__link" href="/news_list.html">Все новости</a>
                </div>

                <div class="news__list">
                    {{#each pages.index.news}}
                        <div class="news__list__item">
                            {{> news/card item=this }}
                        </div>
                    {{/each}}
                </div>

                <div class="news__list">
                    {{#each pages.index.news}}
                        <div class="news__list__item">
                            {{> news/card item=this isSmall=true }}
                        </div>
                    {{/each}}
                </div>
            </div>
        </section>

        <section class="developments glide" data-count="3">
            <div class="container">
                <div class="developments__header section__header">
                    <h1 class="developments__title section__title">События</h1>
                    <div class="glide__arrows" data-glide-el="controls">
                        <button class="glide__arrow glide__arrow--left button button_more button_more_left button_round" data-glide-dir="<"></button>
                        <button class="glide__arrow glide__arrow--right button button_more button_more_right button_round" data-glide-dir=">"></button>
                    </div>
                </div>

                <div class="glide__track" data-glide-el="track">
                    <div class="glide__slides">
                        {{#each pages.index.developments}}
                            <div class="developments__list__item">
                                {{> developments/slide item=this }}
                            </div>
                        {{/each}}

                    </div>
                </div>
            </div>
        </section>

        <section class="information">
            <div class="container _toggle">
                <div class="information__header section__header">
                    <h1 class="information__title section__title">Важная информация</h1>
                    <button class="information__button_more button button_more button_round _toggle__button"></button>
                </div>
                <div class="information__preview">
                    <div class="information__list">
                        {{#each pages.index.information__preview}}
                            <div class="information__list__item">
                                {{> information/card item=this }}
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="information__postview _toggle__container">
                    <div class="information__list">
                        {{#each pages.index.information__postview}}
                            <div class="information__list__item">
                                {{> information/card item=this }}
                            </div>
                        {{/each}}
                    </div>
                </div>

            </div>
        </section>

        <section class="info glide" data-count="4">
            <div class="container">
                <div class="info__header section__header">
                    <h1 class="info__title section__title"></h1>
                    <div class="glide__arrows" data-glide-el="controls">
                        <button class="glide__arrow glide__arrow--left button button_more button_more_left button_round" data-glide-dir="<"></button>
                        <button class="glide__arrow glide__arrow--right button button_more button_more_right button_round" data-glide-dir=">"></button>
                    </div>
                </div>
                <div class="info__glide__track glide__track" data-glide-el="track">
                        <div class="glide__slides">
                            {{#each pages.index.info}}
                                <div class="info__list__item">
                                    {{> info/slide item=this }}
                                </div>
                            {{/each}}

                        </div>
                    </div>
                
            </div>
        </section>

    </main>

    {{> layout/footer}}
{{/common/body}}