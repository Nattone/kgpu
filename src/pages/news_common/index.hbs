<!DOCTYPE html>

{{#> common/body
    title=pages.news_common.pageTitle
    class="news_common-page"
}}
    {{> layout/header title='pages.news_common.title'}}

    <main class="wrapper">

        <div class="container">
            {{> common/breadcrumbs}}

            <div class="content">

                <section class="news">
                    <div class="news__header content__header">
                        <h1 class="news__title content__title">Новости общая</h1>
                        {{!-- <a class="content__link" href="">rss</a> --}}
                    </div>

                    <div class="news__list">
                        {{#each pages.news_common.news}}
                            <div class="news__list__item">
                                {{> news/card item=this }}
                            </div>
                        {{/each}}
                    </div>
                </section>
            
            </div>

            {{> common/pagination}}

        </div>


    </main>

    {{> layout/footer}}
{{/common/body}}