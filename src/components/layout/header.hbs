<header class="header header-main">
    <div class="header__top">
        <div class="container">
            <div class="header__top__left">
                <a class="header__logo logo" href="all.html">
                    <svg class="icon"><use href="#logo" /></svg>
                </a>
                <div class="header__logo_ministry logo_ministry">
                    <img src="img/logo-ministry.svg" alt="ministry">
                </div>
            </div>
            <div class="header__top__right">
                <div class="top">
                    <form action="search.html" class="search">
                        <input type="text" id="search" name="search" placeholder="Поиск">
                        <button class="search__btn" type="submit">
                            <img class="icon-search" src="img/icon-search.svg" alt="search">
                        </button>
                    </form>
                    <div class="language">
                        <div class="language__items">
                            <div class="language__item _current"><img class="language__item__img" src="img/icon-lang_ru.svg"></div>
                            <div class="language__item"><img class="language__item__img" src="img/icon-lang_eng.svg"></div>
                        </div>
                        <div class="language__arrow button_more"></div>
                    </div>
                    <button class="availability">
                        <img src="img/icon-eye.svg" alt="availability">
                    </button>
                </div>
                <div class="bottom">
                    <div class="nav-upper">
                        {{> common/nav items=common.nav-upper}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="nav-main">
        {{> common/nav class="container" items=common.nav-main}}
    </div>
</header>